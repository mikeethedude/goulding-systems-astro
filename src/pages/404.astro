---
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav.astro";
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css';

interface Props {
	title?: string | undefined;
	description?: string | undefined;
}

const { title, description } = Astro.props;
---

<html lang="en">
	<head>
		<MainHead title={title} description={description} />
	</head>
  <body class="bg-gray-50 text-gray-800 font-sans">
    <main>
	<Nav />
	  <section class="bg-white py-24 px-6 max-w-6xl mx-auto text-center">
		<h2 class="text-4xl md:text-5xl font-extrabold leading-tight mb-6 text-gray-900">
			Page Not Found
		</h1>
		<p class="text-lg md:text-xl leading-relaxed text-gray-700 mb-10 max-w-3xl mx-auto">
			How did you even get here? This page doesn't exist.
		</p>
		<Button href="/">Go Home. The Movie is over.</Button>
		</section>
	  <Footer />
    </main>
  </body>
</html>
